{{#each posts as |post| }}
  <div class="card m-6">
  <header class="card-header has-background-primary">
    <p class="card-header-title">
      {{post.title}} 
    </p>
  </header>
  <div class="card-content has-background-grey-lighter">
    <div class="content">
     {{post.post_content}}
      <br>
     <p>- {{user.username}}</p> 
      <time datetime="2016-1-1">{{format_time post.created_at}}</time>
    </div>
  </div>
  <footer class="card-footer">
    <a href="/post/{{post.id}}" class="card-footer-item">Go to Post</a>
  </footer>
  </div>
{{/each}}
