{{#each posts as |post| }}
<div class="flex-center border-4 p-3 m-2 ">
  <div class="col-md-6">
    <h2>{{post.title}}</h2>
    <p>{{user.username}}</p>
  </div>
  <div class="col-md-6">
    <h3>{{post.post_content}}</h3>
  </div>
</div>


<div class="flex-center border-4 p-3 m-2 ">
  <div class="col-md-6">
    <h2>{{post.comment.content}}</h2>
</div>
{{/each}}


