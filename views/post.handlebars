<div class="card m-5" id="post" data-id="{{post.id}}">
  <header class="card-header has-background-primary">
    <p class="card-header-title is-underlined">
      {{post.title}} 
    </p>
  </header>
  <div class="card-content has-background-grey-lighter">
    <div class="content is-family-monospace">
      {{post.post_content}}
      <br>
      <br>
      <time>- {{post.user.username}}, {{format_date post.createdAt}}</time>
    </div>
  </div>
  <footer class="card-footer">
  </footer>
</div>


{{#each post.comments as |comment| }}
<div class="card ml-6 mr-5 mt-2">
  <header class="card-header has-background-primary">
    <p class="card-header-title">
      Comment:
    </p>
  </header>
  <div class="card-content has-background-white-ter">
    <div class="content is-family-monospace">
      {{content}}
      <br>
      <time datetime="2016-1-1">- {{user.username}}, {{format_date comment.createdAt}} </time>
    </div>
  </div>
</div>
{{/each}}
{{#if logged_in}}


  <form class="box has-background-grey-lighter ml-6 mr-5 mt-4" id="new-comment-form">
    <div class="card-header">
      <h3>Add New Comment:</h3>
    </div>
    <div class="field">
      <div class="control">
        <textarea class="textarea is-small" id="comment-content" placeholder="Be nice!"></textarea>
      </div>
    </div>
    <div class="field">
      <p class="control">
        <button type="submit" class="button is-success has-text-weight-bold is-fullwidth submit mt-3">
          Submit
        </button>
      </p>
    </div>
  </form>

</div>
<script src="/js/comment.js"></script>
{{/if}}

