<div class="box m-6 has-background-primary-light" data-id="{{post.id}}">

<form class="edit-post-form box has-background-grey-lighter">
<div class="field">
  <p class="control has-icons-left has-icons-right">
    <textarea class="textarea is-medium"  id="title" rows="1">{{post.title}}</textarea>
  </p>
</div>
<div class="field">
  <div class="control">
    <textarea class="textarea is-medium"  id="post-content" placeholder="">{{post.post_content}}</textarea>
  </div>
</div>
<div class="field">
  <p class="control">
    <button onclick="editPostHandler({{post.id}})" data-editclass="edit-button" type="submit" class="button is-success submit mt-3" id="post-edit">
      Submit
    </button>
  </p>
</div>
</form>

</div>
<script src="/js/update-post.js"></script>